<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F4F2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    tools:context=".ui.fragment.onBoarding.FirstScreen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:src="@drawable/ic_circle_1" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:fontFamily="@font/urbanist_extra_bold"
        android:text="@string/welcome_ultimate"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="@dimen/_25ssp" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:fontFamily="@font/urbanist_medium"
        android:text="@string/your_midfull_mental"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="@dimen/_15ssp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_22sdp"
        android:src="@drawable/img_welcome_screen_1" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/btn_next"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:backgroundTint="@color/secondary"
        android:text="Get Started"
        app:icon="@drawable/ic_right_arrow"
        app:iconGravity="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/urbanist_bold"
            android:text="Already have an account?"
            android:textColor="@color/secondary"
            android:textSize="@dimen/_10ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_bold"
            android:text="Sign In."
            android:textColor="@color/orange"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>

</LinearLayout>